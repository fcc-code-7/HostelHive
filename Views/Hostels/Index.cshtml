@model IEnumerable<HostelManagementSystem.Models.Hostel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.HostelName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HostelLocation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.HostelName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HostelLocation)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.HostelId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.HostelId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.HostelId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
